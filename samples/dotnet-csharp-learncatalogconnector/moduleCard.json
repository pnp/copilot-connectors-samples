                            "separator": true
                        },
                        {
                            "type": "ActionSet",
                            "actions": [{
                                "type": "Action.OpenUrl",
                                "title": "View",
                                "url": "https://learn.microsoft.com/en-us/training/browse/"
                            }]
                        }
                    ]
